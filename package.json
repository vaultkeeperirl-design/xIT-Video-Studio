{
  "name": "xit",
  "productName": "xIT Video Studio",
  "description": "An AI-powered video editor",
  "author": "xIT",
  "private": true,
  "version": "1.0.1",
  "main": "electron/main.js",
  "type": "module",
  "dependencies": {
    "@fal-ai/client": "^1.8.4",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@google/genai": "^1.38.0",
    "@hono/zod-validator": "^0.5.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@remotion/animated-emoji": "^4.0.409",
    "@remotion/bundler": "^4.0.407",
    "@remotion/gif": "4.0.409",
    "@remotion/lottie": "4.0.409",
    "@remotion/player": "^4.0.407",
    "@remotion/preload": "^4.0.409",
    "@remotion/renderer": "^4.0.407",
    "@remotion/shapes": "^4.0.409",
    "@remotion/three": "^4.0.409",
    "@types/formidable": "^3.4.6",
    "@types/three": "^0.182.0",
    "cross-env": "^10.1.0",
    "electron-is-dev": "^3.0.1",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "formdata-node": "^6.0.3",
    "formidable": "^3.5.4",
    "hono": "4.7.7",
    "lottie-web": "5.13.0",
    "lucide-react": "^0.510.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "^7.5.3",
    "react-router-dom": "^7.1.3",
    "remotion": "^4.0.407",
    "three": "^0.182.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.12.0",
    "@eslint/js": "9.25.1",
    "@getmocha/users-service": "^0.0.4",
    "@getmocha/vite-plugins": "latest",
    "@remotion/cli": "^4.0.409",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "22.14.1",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "esbuild": "^0.27.3",
    "eslint": "9.25.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "globals": "15.15.0",
    "jsdom": "^28.1.0",
    "knip": "^5.51.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.31.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.33.0"
  },
  "scripts": {
    "build": "npm run cf-typegen && tsc -b && vite build && node scripts/build-server.js",
    "cf-typegen": "wrangler types",
    "check": "npm run cf-typegen && tsc && vite build && wrangler deploy --dry-run",
    "dev": "vite",
    "ffmpeg-server": "node scripts/local-ffmpeg-server.js",
    "knip": "knip",
    "lint": "eslint .",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.xit.app",
    "productName": "xIT Video Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      "scripts/**/*",
      "dist/server/**/*",
      "src/remotion/**/*",
      "remotion.config.ts",
      "tsconfig.json",
      "tailwind.config.js",
      "postcss.config.js"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "asarUnpack": [
      "**/node_modules/ffmpeg-static/**",
      "**/node_modules/ffprobe-static/**"
    ]
  }
}
